ssh_config: .teefaa/ssh-config

src_host:
  hostname: debian7
  os:
    distro: debian
    ver: 7.2
  #overwrite: False
  save_as: .teefaa/debian7-2014-01-09.squashfs
  exclude:
    - /path/to/excluded/dir

iso_config:
  base_iso: debian-live-7.2-amd64-standard.iso
  base_iso_url: http://cdimage.debian.org/debian-cd/current-live/amd64/iso-hybrid/debian-live-7.2-amd64-standard.iso
  builder:
    hostname: ubuntu1204
    distro: ubuntu
  save_as: .teefaa/teefaa-debian-live.iso

# VirtualBox
dest_host:
  hostname: centos65
  power_driver: virtualbox
  power_driver_config:
    # check the vbox name with "VBoxManage list vms"
    vbox_name: teefaa_centos65_1389388528978_99350
  boot_driver: virtualbox
  boot_driver_config:
    diskless_boot: iso
    iso_file: .teefaa/teefaa-debian-live.iso

